.header
  &__container
    display: flex
    justify-content space-between
    align-items: center

  &__brand-block
    +above($breakpoints.sm)
      display: flex
      align-items: center
      gap: 15px
    +above($breakpoints.md)
      gap: 25px
    +above($breakpoints.xxl)
      gap: 34px

  &__brand
    display: none
    +above($breakpoints.sm)
      display: flex
      flex-direction: column
      gap: 4px

  &__logo
    width 70px
    height: auto
    +above($breakpoints.sm)
      width 80px
    +above($breakpoints.md)
      width 90px
    +above($breakpoints.xxl)
      width 98px

  &__connection
    +above($breakpoints.sm)
      display: flex
      align-items: center
      gap: 15px;
    +above($breakpoints.md)
      gap: 20px;
    +above($breakpoints.xxl)
      gap: 22px

  &__call-me
    display: none
    +above($breakpoints.sm)
      display: flex
