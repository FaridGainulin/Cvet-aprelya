.input
  height: 45px
  width 100%
  padding: 0 32px;
  font-family: 'Raleway-Regular'
  font-weight: 400
  font-size: 14px;
  line-height: 120%
  color: #9D9D9D
  border: 1px solid #9D9D9D
  border-radius: 50px;
  background: #fff
  position relative
  overflow hidden

