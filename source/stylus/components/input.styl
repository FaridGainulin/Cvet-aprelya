  transition border-color 0.3s, box-shadow 0.3s, border 0.3s, background 0.3s
  &:hover
    border 1px solid #FF9A44
  &:focus
    color: #161616
    caret-color: #FF9A44
    border 1px solid #FF9A44
    box-shadow: 3px 3px 20px 0px #FF9A44
    background: #fff
    &::placeholder
      color: #9D9D9D
  &::placeholder
    color: #9D9D9D
  +above($breakpoints.sm)
    padding: 0 20px;
    font-size: 14px;
    height: 50px
  +above($breakpoints.md)
    padding: 0 25px;
    font-size: 16px;
    height: 55px
  +above($breakpoints.xxl)
    padding: 0 32px;
    font-size: 18px;
    height: 60px
  &.error
    border 1px solid $color-error
    color: $color-error
    caret-color: $color-error
    box-shadow: 0px 0px 22px 0px $color-error
    background: #fff
    &::placeholder
      color: $color-error
    &::-ms-input-placeholder
      color: $color-error
    animation: shake 0.6s;
    @keyframes shake
      10%, 90%
        transform: translate3d(-1px, 0, 0)
      20%, 80%
        transform: translate3d(2px, 0, 0)
      30%, 50%, 70%
        transform: translate3d(-4px, 0, 0)
      40%, 60%
        transform: translate3d(4px, 0, 0)

