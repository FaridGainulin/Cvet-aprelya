.footer
  background-color: #3E210C

  &__container
    display: flex
    align-items: center
    flex-direction: column
    color: #fff
    gap: 10px
    padding 10px 0
    +above($breakpoints.sm)
      flex-direction: row
      justify-content space-between
      padding 12px 0
    +above($breakpoints.md)
      padding 14px 0
    +above($breakpoints.xxl)
      padding 15px 0 16px

  &__brand-block
    +above($breakpoints.sm)
      display: flex
      align-items: center
      gap: 15px
    +above($breakpoints.md)
      gap: 25px
    +above($breakpoints.xxl)
      gap: 39px

  &__brand
    display: none
    +above($breakpoints.sm)
      display: block

  &__logo
    width 60px
    height: auto
    +above($breakpoints.sm)
      width 50px
    +above($breakpoints.md)
      width 60px
    +above($breakpoints.xxl)
      width 71px

  &__privacy
    cursor pointer
    text-decoration: underline
    color: #d8d3ce

  &__connection
    +above($breakpoints.sm)
      display: flex
      align-items: center
      gap: 15px;
    +above($breakpoints.md)
      gap: 20px;
    +above($breakpoints.xxl)
      gap: 22px

  &__call-me
    display: none
    +above($breakpoints.sm)
      display: flex
