.city-section
  // background-image: url('../images/city-section-bg.jpg')
  // background-repeat: no-repeat
  // background-size: cover
  // background-position: center
  background-color #457345

  &__container
    color: #fff
    position relative
    text-align: center
    padding 20px 0
    +above($breakpoints.sm)
      text-align: start
      padding 50px 0
    +above($breakpoints.md)
      padding 90px 0
    +above($breakpoints.xxl)
      padding 150px 0

  &__icon
    position: absolute
    width: 30px;
    height: auto;
    bottom: 38px;
    left: 0;
    +above($breakpoints.sm)
      width: 38px;
      bottom: 41px;
      left: -70px;
    +above($breakpoints.md)
      width: 50px;
      bottom: 74px;
      left: -98px;
    +above($breakpoints.xxl)
      width 64px
      bottom: 136px
      left: -237px

  &__sub-title
    padding 15px 0 10px
    +above($breakpoints.sm)
      padding 30px 0 16px
    +above($breakpoints.md)
      padding 40px 0 18px
    +above($breakpoints.xxl)
      padding 51px 0 20px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      width 490px
      flex-direction: row
      flex-wrap: wrap
      gap: 6px
    +above($breakpoints.md)
      gap: 7px
    +above($breakpoints.xxl)
      gap: 8px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 180px !important
      +above($breakpoints.md)
        width 220px !important
      +above($breakpoints.xxl)
        width 240px !important

  &__agree-wrapper
    display: flex
    justify-content center
    align-items: center
    color: #F1F1F1
    gap: 6px
    +above($breakpoints.sm)
      align-items: flex-start
      justify-content start

  &__img
    width 280px
    height: auto
    margin: 15px 0 0 50px;
    +above($breakpoints.sm)
      margin 0
      position: absolute
      width: 440px;
      bottom: 40px;
      right: -110px;
    +above($breakpoints.md)
      width: 564px;
      bottom: 58px;
      right: -109px;
    +above($breakpoints.xxl)
      width 777px
      bottom: 72px
      right: -160px
