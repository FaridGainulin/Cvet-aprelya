@font-face
  font-family 'Montserrat-Regular'
  src url('../fonts/Montserrat-Regular.woff'), url('../fonts/Montserrat-Regular.woff2')
  font-display swap

@font-face
  font-family 'Raleway-Bold'
  src url('../fonts/Raleway-Bold.woff'), url('../fonts/Raleway-Bold.woff2')
  font-display swap
@font-face
  font-family 'Raleway-BoldItalic'
  src url('../fonts/Raleway-BoldItalic.woff'), url('../fonts/Raleway-BoldItalic.woff2')
  font-display swap
@font-face
  font-family 'Raleway-Medium'
  src url('../fonts/Raleway-Medium.woff'), url('../fonts/Raleway-Medium.woff2')
  font-display swap
@font-face
  font-family 'Raleway-Regular'
  src url('../fonts/Raleway-Regular.woff'), url('../fonts/Raleway-Regular.woff2')
  font-display swap
@font-face
  font-family 'Raleway-SemiBold'
  src url('../fonts/Raleway-SemiBold.woff'), url('../fonts/Raleway-SemiBold.woff2')
  font-display swap
@font-face
  font-family 'Raleway-SemiBoldItalic'
  src url('../fonts/Raleway-SemiBoldItalic.woff'), url('../fonts/Raleway-SemiBoldItalic.woff2')
  font-display swap

@import 'common/variables'
@import 'common/*'
@import 'components/*'

body
  margin 0 auto
  font-size 18px
  font-family 'Raleway-Medium'
  font-weight 500
  line-height 120%
  color #3E210C

.layout
  width 100%
  height 100%
  margin 0 auto
  display flex
  flex-direction column
  overflow-x hidden
.main
  flex 1

.wrapper
  max-width 320px
  margin 0 auto
  padding 0 6px
  width 100%
  +above($breakpoints.sm)
    max-width 750px
    padding 0 12px
  +above($breakpoints.md)
    max-width 996px
    padding 0 15px
  +above($breakpoints.xxl)
    padding 0 20px
    max-width 1220px
